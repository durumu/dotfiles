# vim: ft=cfg
[global]
# The format of the message.  Possible variables are:
#   %a  appname
#   %s  summary
#   %b  body
#   %i  iconname (including its path)
#   %I  iconname (without its path)
#   %p  progress value if set ([  0%] to [100%]) or nothing
format = "<b>%s</b>\n%b"
font = Hack 14
markup = yes
plain_text = no

# sort by urgency
sort = yes
# monitor to display on
monitor = 0
# seconds idle after which we remove notifications
idle_threshold = 0

# (width)x(height)(+-x)(+-y)
geometry = "400x70-15+49"
line_height = 3
separator_height = 2
padding = 6
horizontal_padding = 6
shrink = no
transparency = 5

# no timeout on history
sticky_history = yes
history_length = 10


[shortcuts]
close = ctrl+space
close_all = ctrl+shift+space
history = ctrl+grave


[urgency_low]
# IMPORTANT: colors have to be defined in quotation marks.
# Otherwise the "#" and following would be interpreted as a comment.
foreground = "#d8dee9"
background = "#2e3440"
timeout = 3

[urgency_normal]
foreground = "#d8dee9"
background = "#2e3440"
timeout = 6

[urgency_critical]
frame_color = "#bf616a"
foreground = "#ffffff"
background = "#2e3440"
timeout = 0
